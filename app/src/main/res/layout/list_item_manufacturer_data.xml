<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_manufacturer_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manufacturer_id_label" />

    <TextView
        android:id="@+id/tv_manufacturer_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_manufacturer_id_label"
        android:layout_toRightOf="@id/tv_manufacturer_id_label"
        android:text="1" />

    <TextView
        android:id="@+id/tv_manufacturer_data_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_manufacturer_id_label"
        android:layout_marginTop="8dp"
        android:text="@string/manufacturer_data_label" />

    <TextView
        android:id="@+id/tv_manufacturer_data_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_manufacturer_data_label"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_manufacturer_data_label"
        android:layout_toRightOf="@id/tv_manufacturer_data_label"
        android:text="1" />

</RelativeLayout>